<div class="container">
  <div class="row">
    <div class="col">
      <h2>Add Movies</h2>
      <form action="/movie/new" method="POST">
        <div class="form-group">
          <label for="">Title</label>
          <input class="form-control" type="text" name="title">
        </div>
        <div class="form-group">
          <label for="">Genre</label>
          <input class="form-control" type="text" name="genre">
        </div>
        <div class="form-group">
          <label for="plot">Plot</label>
          <textarea class="form-control" id="plot" rows="6"></textarea>
        </div>
      </form>
      <button class="btn btn-outline-info btn-sm" type="submit">ADD</button>
      <p><a class="btn btn-outline-info btn-sm mt-4" href="/movies">Return</a></p>
    </div>
  </div>
</div>