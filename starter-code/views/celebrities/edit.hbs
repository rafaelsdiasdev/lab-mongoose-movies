<div class="container">
  <div class="row">
    <div class="col">
      <h2>Edit Celebrites</h2>
      <form action='/celebrities/{{this.id}}/edit' method="POST">
        <div class="form-group">
          <label for="">Name</label>
          <input class="form-control" type="text" value="{{this.name}}" name="name">
        </div>
        <div class="form-group">
          <label for="">Occupation</label>
          <input class="form-control" type="text" value="{{this.occupation}}" name="occupation">
        </div>
        <div class="form-group">
          <label for="catchPhrase">Cath Phrase</label>
          <textarea class="form-control" id="catchPhrase" rows="6">{{this.catchPhrase}}</textarea>
        </div>
        <button class="btn btn-outline-info btn-sm" type="submit">ADD</button>
      </form>
      <p><a class="btn btn-outline-info btn-sm mt-4" href="/celebrities">Return</a></p>
    </div>
  </div>
</div>